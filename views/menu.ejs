        <script>
            $(buscarDatosBarra());

            function buscarDatosBarra(consulta){
                $.ajax({
                    url: 'busqueda.php', 
                    type: 'POST',
                    dataType: 'default',
                    data: {consulta: consulta},
                })
                .done(function(respuesta) {
                    $('#datos').html(respuesta); 
                })
                .fail(function() {
                    console.log("error"); 
                })
            }

        $(document).on('keyup, '#barraBusqueda', function(){
            var valor = $(this).val(); 

            if(valor != 0){
                buscarDatosBarra(valor); 
            } else {
                buscarDatosBarra();
            }
